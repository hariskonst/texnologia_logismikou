<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/complaint_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/system_accent1_500"
    tools:targetApi="31">

    <!-- Header (ίδιο με την κεντρική οθόνη) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DomusLink"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:gravity="center"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/settings"
            android:contentDescription="@string/settings"/>
    </LinearLayout>

    <!-- Card για το Complaint -->
    <androidx.cardview.widget.CardView
        android:id="@+id/complaint_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Subject Field Label -->
            <TextView
                android:id="@+id/tvSubjectLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Θέμα"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Subject EditText -->
            <EditText
                android:id="@+id/etSubject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Θέμα καταγγελίας"
                android:inputType="text"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvSubjectLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Body Field Label -->
            <TextView
                android:id="@+id/tvBodyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Κείμενο"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/etSubject"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- Body EditText -->
            <EditText
                android:id="@+id/etComplaintBody"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:hint="Γράψε την καταγγελία σου εδώ"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvBodyLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btnSubmitComplaint"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Submit button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitComplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Υποβολή"
                app:cornerRadius="20dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#3F51B5"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/poll"
            android:contentDescription="@string/vote"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/payment"
            android:contentDescription="@string/payment"/>

        <ImageButton
            android:id="@+id/UploadReceiptButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            app:srcCompat="@drawable/upload_receipts"
            android:contentDescription="@string/upload_Receipts"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/notifications"
            android:contentDescription="@string/notification"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

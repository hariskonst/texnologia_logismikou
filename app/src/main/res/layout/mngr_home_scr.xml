<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manager_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/system_accent1_500"
    tools:context=".ManagerHomeScreenActivity"
    tools:ignore="NewApi">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DomusLink"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/imageButton14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/settings"
            android:contentDescription="@string/settings"
            />

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/top_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/tenapBtn"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="Apartment / Tenant Edit"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/LostFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lost And Found"
            tools:ignore="ButtonStyle,HardcodedText,InefficientWeight" />

        <Button
            android:id="@+id/Maintenance"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Manage Maintenance"
            tools:ignore="ButtonStyle,HardcodedText" />

    </LinearLayout>

    <!-- Maintenance Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/maintenance_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/top_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="Maintenances"
                android:textSize="8sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView android:text="~~~~~~~~~~"  android:layout_height="wrap_content" android:layout_width="match_parent"
                tools:ignore="HardcodedText" />
            <TextView android:text="~~~~~~~~~~~~~~~~"  android:layout_height="wrap_content" android:layout_width="match_parent"
                tools:ignore="HardcodedText" />
            <TextView android:text="~~~~~~~~~~~~~~~~" android:layout_height="wrap_content" android:layout_width="match_parent"
                tools:ignore="HardcodedText" />
            <TextView android:text="~~~~~~~~~~~~~~~~" android:layout_height="wrap_content" android:layout_width="match_parent"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Marketplace Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/marketplace_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/maintenance_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marketplace"
                android:textSize="8sp"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• ~~~~~~~~~~~~~~~~"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• ~~~~~~~~~~~~~~~~"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• ~~~~~~~~~~~~~~~~"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• ~~~~~~~~~~~~~~~~"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation (Fake Icons) -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#3F51B5"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/poll"
            android:contentDescription="@string/vote"
            />

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/payment"
            android:contentDescription="@string/payment"
            />

        <ImageButton
            android:id="@+id/UploadReceiptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/upload_receipts"
            android:contentDescription="@string/upload_Receipts"
            />

        <ImageButton
            android:id="@+id/notifbutton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/notifications"
            android:contentDescription="@string/notification"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


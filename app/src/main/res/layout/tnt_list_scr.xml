<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tnt_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Κάρτα με στρογγυλές γωνίες -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_margin="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#567098">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Τίτλος -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenant List"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <!-- Tenant 1 -->
            <CheckBox
                android:id="@+id/tenant1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenant 1"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/titleText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <!-- Tenant 2 -->
            <CheckBox
                android:id="@+id/tenant2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenant 2"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/tenant1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Tenant 3 -->
            <CheckBox
                android:id="@+id/tenant3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenant 3"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/tenant2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Tenant 4 -->
            <CheckBox
                android:id="@+id/tenant4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenant 4"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/tenant3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/gotoadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:backgroundTint="#4A90E2"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tenant4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
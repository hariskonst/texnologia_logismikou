<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/managerentryscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/system_accent1_500"
    tools:context=".Tnt_LostFound_Entry_ScrActivity"
    tools:ignore="NewApi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.268"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <!-- Title -->
        <TextView
            android:id="@+id/cardDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Lost and Found Entry"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black" />

        <!-- Object Title -->

        <!-- Object Description -->

        <!-- Date Found -->
        <EditText
            android:id="@+id/editTitle"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Object Title"
            android:inputType="text"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="8dp"
            android:hint="Object Description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:padding="12dp" />

        <!-- Date Found -->
        <EditText
            android:id="@+id/editDate"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="8dp"
            android:hint="Date Found"
            android:inputType="date"
            android:padding="12dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#6A4CAF"
            android:minHeight="48dp"
            android:text="Submit"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/cardDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="New Lost and Found Entry"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
